{
  "name": "pokemon-zoggen",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "generate-data": "node ./scripts/frontend/fetch-pokedata.js",
    "prebuild": "npm run generate-data",
    "dev": "vite --host",
    "start": "docker-compose up -d",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "cypress:open": "cypress open",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run -u",
    "lint": "eslint src --ext .ts --ext .tsx",
    "lint:fix": "eslint src --fix --ext .ts --ext .tsx",
    "dump-database": "node scripts/firebase/dump-firestore.js",
    "dump-database:prod": "node scripts/firebase/dump-firestore.js prod",
    "clear-database": "curl -v -X DELETE \"http://localhost:8080/emulator/v1/projects/pokemon-zoggen/databases/(default)/documents\""
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/icons-material": "^5.10.3",
    "@mui/material": "^5.10.3",
    "@reduxjs/toolkit": "^1.8.5",
    "@sentry/react": "^7.12.0",
    "@sentry/tracing": "^7.12.1",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.184",
    "@types/node": "^18.7.15",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "10.4.5",
    "csvtojson": "^2.0.10",
    "cypress": "^10.6.0",
    "cypress-firebase": "^2.2.2",
    "dotenv": "^16.0.2",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "firebase": "^9.9.3",
    "firebase-admin": "^11.0.1",
    "firebaseui": "^6.0.1",
    "got": "^12.4.1",
    "husky": "^8.0.0",
    "lodash": "^4.17.21",
    "postcss": "^8.4.16",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-firebaseui": "^6.0.0",
    "react-redux": "^8.0.2",
    "react-redux-firebase": "^3.11.0",
    "react-router-dom": "^6.3.0",
    "redux-firestore": "^1.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vitest": "0.23.1"
  }
}
